<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginHandler</servlet-name>
        <servlet-class>com.dmr.project.controller.LoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestFormHandling</servlet-name>
        <servlet-class>com.dmr.project.controller.RequestFormHandling</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.dmr.project.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomePage</servlet-name>
        <servlet-class>com.dmr.project.controller.AdminHomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewsHandler</servlet-name>
        <servlet-class>com.dmr.project.controller.NewsHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendSmsPage</servlet-name>
        <servlet-class>com.dmr.project.controller.SendSmsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TransformerHandler</servlet-name>
        <servlet-class>com.dmr.project.controller.TransformerHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginHandler</servlet-name>
        <url-pattern>/LoginHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestFormHandling</servlet-name>
        <url-pattern>/RequestFormHandling</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomePage</servlet-name>
        <url-pattern>/AdminHomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewsHandler</servlet-name>
        <url-pattern>/NewsHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendSmsPage</servlet-name>
        <url-pattern>/SendSmsPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TransformerHandler</servlet-name>
        <url-pattern>/TransformerHandler</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
